{
  "name": "@lolpants/image-hash",
  "version": "3.0.0",
  "packageManager": "yarn@3.2.0",
  "description": "Generate perceptual hashes for PNG or JPEG images",
  "type": "module",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prepack": "yarn run build",
    "prepublish": "yarn run test",
    "test": "yarn run check && yarn run lint && yarn run ava",
    "check": "yarn run compile --noEmit",
    "lint": "xo ./src ./test",
    "clean": "rimraf lib",
    "compile": "tsc",
    "build": "yarn run clean && yarn run compile",
    "dev": "yarn run clean && yarn run compile --watch"
  },
  "repository": "git@github.com:lolPants/image-hash.git",
  "author": "Jack Baron <jackmbaron@gmail.com> (https://www.jackbaron.com)",
  "license": "ISC",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/node": "^16",
    "@types/pngjs": "^6.0.1",
    "ava": "^4.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "xo": "^0.48.0"
  },
  "dependencies": {
    "file-type": "^17.1.1",
    "jpeg-js": "^0.4.3",
    "pngjs": "^6.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
