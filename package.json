{
  "name": "@lolpants/image-hash",
  "version": "3.1.0",
  "packageManager": "yarn@3.2.3",
  "description": "Generate perceptual hashes for PNG or JPEG images",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check": "tsc --noEmit --skipLibCheck",
    "lint": "prettier --check . && eslint src --ext ts",
    "format": "prettier --write . && eslint src --ext ts --fix",
    "fmt": "yarn run format",
    "vitest": "vitest run",
    "test": "yarn run check && yarn run lint && yarn run vitest",
    "prepack": "yarn run test && yarn run build"
  },
  "author": "Jack Baron <jackmbaron@gmail.com> (https://www.jackbaron.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lolPants/image-hash.git"
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@types/pngjs": "^6.0.1",
    "@vitest/coverage-c8": "^0.23.4",
    "eslint": "^8.23.1",
    "eslint-config-neon": "^0.1.33",
    "prettier": "^2.7.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3",
    "vitest": "^0.23.4"
  },
  "dependencies": {
    "file-type": "^18.0.0",
    "jpeg-js": "^0.4.4",
    "pngjs": "^6.0.0"
  }
}
